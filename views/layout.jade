doctype html
html
  head
    title= 'DogBiz Billboard'
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/jquery-ui-dist/jquery-ui.min.css')
    link(rel='stylesheet', href='/jquery-ui-dist/jquery-ui.theme.min.css')
    link(rel='stylesheet', href='/jquery-ui-dist/jquery-ui.structure.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

    script(src='/jquery/dist/jquery.min.js')
    script(src='/jquery-ui-dist/jquery-ui.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')

  body
    //nav.navbar.navbar-default.navbar-fixed-top.bs-docs-nav
    header#top.navbar.navbar-static-top.navbar-default.bs-docs-nav(role="banner")
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(
            type="button",
            data-toggle="collapse",
            data-target="#bs-example-navbar-collapse-1",
            aria-expanded="false")
            span.sr-only
              Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/")
            | DogBiz Billboard
        div.collapse.navbar-collapse#bs-example-navbar-collapse-1
          //if authenticated
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href="",
                data-toggle="dropdown",
                role="button",
                aria-haspopup="true",
                aria-expanded="false")
                | Dogs
                span.caret
              ul.dropdown-menu
                li
                  a(href="/dogs")
                    | Dogs list
                li
                  a(href="/dogs/top/100")
                    | Top 100
                if isAdmin
                  li
                    a(href="/dogs/create")
                      | Create dog profile
            li.dropdown
              a.dropdown-toggle(href="",
                data-toggle="dropdown",
                role="button",
                aria-haspopup="true",
                aria-expanded="false")
                | DogShows
                span.caret
              ul.dropdown-menu
                li
                  a(href="/dog_shows")
                    | DogShows List
                if isAdmin
                  li
                    a(href="/dog_shows/create")
                      | Add DogShow
            li.dropdown
              a.dropdown-toggle(href="",
                data-toggle="dropdown",
                role="button",
                aria-haspopup="true",
                aria-expanded="false")
                | Judges
                span.caret
              ul.dropdown-menu
                li
                  a(href="/judges")
                    | Judges list
                if isAdmin
                  li
                    a(href="/judges/create")
                      | Create judge profile
            li.dropdown
              a.dropdown-toggle(href="",
                data-toggle="dropdown",
                role="button",
                aria-haspopup="true",
                aria-expanded="false")
                | Achievements
                span.caret
              ul.dropdown-menu
                li
                  a(href="/achievements")
                    | Achievements List
                if isAdmin
                  li
                    a(href="/achievements/create")
                      | Add Achievement
            if isAdmin
              li.dropdown
                a.dropdown-toggle(href="",
                  data-toggle="dropdown",
                  role="button",
                  aria-haspopup="true",
                  aria-expanded="false")
                  | Admin
                  span.caret
                ul.dropdown-menu
                  li
                    a(href="/admins")
                      | Admin List
                  li
                    a(href="/admins/create")
                      | Create Admin
              li.dropdown
                a.dropdown-toggle(href="",
                  data-toggle="dropdown",
                  role="button",
                  aria-haspopup="true",
                  aria-expanded="false")
                  | Breed
                  span.caret
                ul.dropdown-menu
                  li
                    a(href="/breeds")
                      | Breeds List
                  li
                    a(href="/breeds/create")
                      | Add new Breed
          ul.nav.navbar-nav.navbar-right
            if authenticated
              li.dropdown
                a.dropdown-toggle(href="",
                  data-toggle="dropdown",
                  role="button",
                  aria-haspopup="true",
                  aria-expanded="false")
                  ="Hello " + current_account.email
                  span.caret
                ul.dropdown-menu
                  li
                    a(href="/accounts/" + current_account.id)
                      | Profile
                  li
                    a(href="/logout")
                      | Log out
            else
              li
                a(href="/login")
                  | Log in
    div.container
      if notification
        div.row
          div.alert(class=notification.type,
            role="alert")
            =notification.content
      if breadcrums
        div.row
          ol.breadcrumb
            each bc, index in breadcrums
              li: a(href=bc.link)=bc.name
      block content

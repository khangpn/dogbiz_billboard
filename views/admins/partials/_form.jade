form.form-horizontal(action=(!admin || admin.isNewRecord) ? 
'/admins' : '/admins/'+admin.id, method="post")
  if admin
    input.form-control(type='hidden',
      name='id',
      id='Admin_id',
      value=admin.id)
    input(type="hidden", name="_method", value="put")
  div.form-group
    label.col-sm-2.control-label(for='Admin_email') Email
    div.col-sm-10
      input.form-control(type='text',
        name='account[email]',
        id='Admin_email',
        placeholder='Email',
        value= admin ? admin.account.email : "")
  if !admin || admin.isNewRecord
    div.form-group
      label.col-sm-2.control-label(for='Admin_password') Password
      div.col-sm-10
        input.form-control(type='password',
          name='account[password]',
          id='Admin_password',
          placeholder='Password',
          value= "")
    div.form-group
      label.col-sm-2.control-label(for='Admin_password_confirm') Confirm Password
      div.col-sm-10
        input.form-control(type='password',
          name='account[password_confirm]',
          id='Admin_password_confirm',
          placeholder='Confirm Password',
          value= "")
  div.form-group
    label.col-sm-2.control-label(for='Admin_fullname') Fullname
    div.col-sm-10
      input.form-control(type='text',
        name='fullname',
        id='Admin_fullname',
        placeholder='Fullname',
        value= admin ? admin.fullname : "")
  div.form-group
    label.col-sm-2.control-label(for='Admin_note') Note
    div.col-sm-10
      textarea.form-control(
        name='note',
        id='Admin_note',
        placeholder='Note',
      )=admin ? admin.note : ""
  div.form-group
    div.col-sm-offset-2.col-sm-3
      input.btn.btn-default(type='submit' value='Submit')
    if admin
      div.col-sm-offset-2.col-sm-3
        a.btn.btn-default(href='/admins/'+admin.id+'/password') 
          | Update password

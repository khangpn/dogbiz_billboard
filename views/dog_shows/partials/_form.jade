link(rel='stylesheet', href='/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css')
script(src='/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js')
script(src='/javascripts/dog_shows/partials/_form.js')

form.form-horizontal(action=(!dog_show || dog_show.isNewRecord) ? 
'/dog_shows' : '/dog_shows/'+dog_show.id, method="post")
  if dog_show
    input.form-control(type='hidden',
      name='id',
      id='DogShow_id',
      value=dog_show.id)
    input(type="hidden", name="_method", value="put")
  div.form-group
    label.col-sm-2.control-label(for='DogShow_name') Name
    div.col-sm-10
      input.form-control(type='text',
        name='name',
        id='DogShow_name',
        placeholder='Name',
        value= dog_show ? dog_show.name : "")
  div.form-group
    label.col-sm-2.control-label(for='DogShow_startDate') Date
    div.col-sm-10
      div.input-group.date
        input.form-control(type='text',
          name='startDate',
          id='DogShow_startDate',
          readonly,
          placeholder='Start date',
          value= dog_show ? dog_show.startDate : "")
        span.input-group-addon
          i.glyphicon.glyphicon-th
  div.form-group
    label.col-sm-2.control-label(for='DogShow_photo') Address
    div.col-sm-10
      input.form-control(type='text',
        name='address',
        id='DogShow_address',
        placeholder='DogShow address',
        value= dog_show ? dog_show.address : "")
  div.form-group
    label.col-sm-2.control-label(for='DogShow_note') Note
    div.col-sm-10
      textarea.form-control(
        name='note',
        id='DogShow_note',
        placeholder='Note',
      )=dog_show ? dog_show.note : ""
  div.form-group
    div.col-sm-offset-2.col-sm-3
      input.btn.btn-default(type='submit' value='Submit')

div.container
  form.form-horizontal(action='/dogs', method="get")
    div.form-group
      label.col-sm-1.control-label(for='Dog_breed_fci') Breed
      div.col-sm-2
        select.form-control( name='breed_fci', id='Dog_breed_fci')
          option(value='')
            | --select--
          for bre in breeds
            option(value=bre.fci,
              selected=(breed && breed.fci == bre.fci) ?
                'selected' : undefined
              )
              =bre.name
      div.col-sm-1
        input.btn.btn-default(type='submit' value='Submit')

